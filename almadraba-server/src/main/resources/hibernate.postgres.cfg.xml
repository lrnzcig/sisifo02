<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>

        <!-- Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">almadraba</property>
        <property name="hibernate.connection.password">almadraba</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:15432/almadraba</property>
        
        <property name="hibernate.c3p0.min_size">5</property>
		<property name="hibernate.c3p0.max_size">20</property>
		<property name="hibernate.c3p0.timeout">1800</property>
		<property name="hibernate.c3p0.max_statements">50</property>
        
        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        
        <property name="hibernate.current_session_context_class">thread</property>

        <mapping resource="com/sisifo/almadraba_server/hbm/user_page_rank_evolution.hbm.xml"/>
        <mapping resource="com/sisifo/almadraba_server/hbm/tweets.hbm.xml"/>

    </session-factory>

</hibernate-configuration>